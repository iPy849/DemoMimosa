---
import '../styles/globals.css';
import { getEnJSON } from '../i18n/utils';
import es from '../i18n/es.json';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'MIMOSA Developments | Boutique Real Estate',
  description = 'Exclusividad y Prestigio en el Caribe. Desarrollos y propiedades de lujo.',
} = Astro.props;

const enJSON = getEnJSON();
const esJSON = JSON.stringify(es);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Forum&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <!-- Blocking: prevent FOUC by applying theme + lang BEFORE first paint -->
    <script is:inline>
      (function(){
        var t = localStorage.getItem('theme');
        if (!t) t = matchMedia('(prefers-color-scheme:dark)').matches ? 'dark' : 'light';
        if (t === 'dark') document.documentElement.classList.add('dark');
        var l = localStorage.getItem('lang');
        if (!l) { var b = navigator.language || 'es'; l = b.startsWith('en') ? 'en' : 'es'; }
        document.documentElement.lang = l;
        // Mark that JS is running so CSS can safely hide .reveal elements
        document.documentElement.classList.add('js');
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
    <script is:inline define:vars={{ enJSON, esJSON }}>
      // Expose translations globally for the language toggle
      window.__enTranslations = JSON.parse(enJSON);
      window.__esTranslations = JSON.parse(esJSON);

      function __applyLangAndReveal() {
        var lang = document.documentElement.lang || 'es';

        // Apply translations if EN
        if (lang === 'en') {
          var en = window.__enTranslations;
          document.querySelectorAll('[data-t]').forEach(function(el) {
            var key = el.getAttribute('data-t');
            if (key && en[key]) {
              el.textContent = en[key];
            }
          });
        }

        // Update lang toggle buttons
        var label = lang === 'es' ? 'ES' : 'EN';
        document.querySelectorAll('#lang-toggle, #lang-toggle-mobile').forEach(function(btn) {
          btn.textContent = label;
        });

        // Scroll-reveal observer
        var observer = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              entry.target.classList.add('revealed');
              observer.unobserve(entry.target);
            }
          });
        }, { threshold: 0.15 });
        document.querySelectorAll('.reveal:not(.revealed)').forEach(function(el) {
          observer.observe(el);
        });
      }

      // Run on load
      __applyLangAndReveal();
    </script>
  </body>
</html>
