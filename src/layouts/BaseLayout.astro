---
import '../styles/globals.css';
import { getEnJSON } from '../i18n/utils';
import es from '../i18n/es.json';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'MIMOSA Developments | Boutique Real Estate',
  description = 'Exclusividad y Prestigio en el Caribe. Desarrollos y propiedades de lujo.',
} = Astro.props;

const enJSON = getEnJSON();
const esJSON = JSON.stringify(es);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Forum&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
    <script is:inline define:vars={{ enJSON, esJSON }}>
      // Expose translations globally for the language toggle
      window.__enTranslations = JSON.parse(enJSON);
      window.__esTranslations = JSON.parse(esJSON);

      // Theme initialization
      (function() {
        const theme = (() => {
          if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
            return localStorage.getItem('theme');
          }
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        })();
        document.documentElement.classList.toggle('dark', theme === 'dark');
      })();

      // Language: check stored preference first, then browser language, fallback to Spanish
      (function() {
        var storedLang = localStorage.getItem('lang');
        var lang;
        if (storedLang) {
          lang = storedLang;
        } else {
          var browserLang = navigator.language || (navigator.languages && navigator.languages[0]) || 'es';
          lang = browserLang.startsWith('en') ? 'en' : 'es';
        }

        document.documentElement.lang = lang;
        if (lang === 'en') {
          var en = window.__enTranslations;
          document.querySelectorAll('[data-t]').forEach(function(el) {
            var key = el.getAttribute('data-t');
            if (key && en[key]) {
              el.textContent = en[key];
            }
          });
        }

        // Update lang toggle buttons
        var label = lang === 'es' ? 'ES' : 'EN';
        document.querySelectorAll('#lang-toggle, #lang-toggle-mobile').forEach(function(btn) {
          btn.textContent = label;
        });
      })();
    </script>
  </body>
</html>
