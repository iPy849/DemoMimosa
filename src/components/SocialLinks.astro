---
import Icon from './icons/Icon.astro';

interface Props {
  class?: string;
  iconClass?: string;
}

const { class: className = '', iconClass = 'w-4 h-4' } = Astro.props;
---

<div class:list={["flex gap-3", className]}>
  <a href="#" class="w-10 h-10 rounded-full border border-current/20 flex items-center justify-center opacity-70 hover:opacity-100 hover:border-primary hover:text-primary transition-all" aria-label="Instagram">
    <Icon name="instagram" class={iconClass} />
  </a>
  <a href="#" class="w-10 h-10 rounded-full border border-current/20 flex items-center justify-center opacity-70 hover:opacity-100 hover:border-primary hover:text-primary transition-all" aria-label="Facebook">
    <Icon name="facebook" class={iconClass} />
  </a>
  <a href="#" class="w-10 h-10 rounded-full border border-current/20 flex items-center justify-center opacity-70 hover:opacity-100 hover:border-primary hover:text-primary transition-all" aria-label="LinkedIn">
    <Icon name="linkedin" class={iconClass} />
  </a>
  <a href="#" class="w-10 h-10 rounded-full border border-current/20 flex items-center justify-center opacity-70 hover:opacity-100 hover:border-primary hover:text-primary transition-all" aria-label="TikTok">
    <Icon name="tiktok" class={iconClass} />
  </a>
</div>
