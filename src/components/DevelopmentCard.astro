---
import { translations, type Language } from '../data/translations';

interface Props {
  id: string;
  title: string;
  location: string;
  image: string;
  description: string;
  lang?: Language;
}

const { id, title, location, image, description, lang = 'es' } = Astro.props;
const t = (key: keyof typeof translations['es']) => translations[lang][key] || key;
const prefix = lang === 'en' ? '/en' : '';
---

<a href={`${prefix}/desarrollos/${id}`} class="group block">
  <div class="bg-card rounded-lg overflow-hidden border border-border shadow-sm hover:shadow-lg transition-all duration-300 group-hover:-translate-y-1">
    <div class="relative aspect-[4/3] overflow-hidden">
      <img
        src={image}
        alt={description}
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
        loading="lazy"
      />
    </div>
    <div class="p-6">
      <div class="flex items-center gap-1.5 text-primary text-sm mb-2">
        <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
        <span class="font-body">{location}</span>
      </div>
      <h3 class="text-xl font-headline font-semibold mb-2 text-foreground">{title}</h3>
    </div>
    <div class="px-6 pb-6">
      <span class="inline-flex items-center gap-2 text-primary text-sm font-bold tracking-wider uppercase font-body group-hover:gap-3 transition-all">
        {t("nav.developments").toUpperCase()}
        <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
      </span>
    </div>
  </div>
</a>
