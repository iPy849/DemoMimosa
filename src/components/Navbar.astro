---
import { t } from '../i18n/utils';
import SocialLinks from './SocialLinks.astro';

interface Props {
  transparent?: boolean;
}

const { transparent = false } = Astro.props;

const navItems = [
  { key: "nav.home", href: '/' },
  { key: "nav.about", href: '/about' },
  { key: "nav.developments", href: '/developments' },
  { key: "nav.blog", href: '/blog' },
  { key: "nav.contact", href: '/contact' },
];
---

<nav id="main-nav" class:list={["fixed top-0 left-0 right-0 z-50 transition-all duration-500", transparent ? "nav-transparent" : "glass-nav"]} data-transparent={transparent ? "true" : "false"}>
  <div class="max-w-7xl mx-auto px-6 flex items-center justify-between h-20">
    <!-- Logo: dark logo for light mode, light logo for dark mode.
         When nav-transparent (hero), always show light logo via CSS override. -->
    <a href="/" class="block shrink-0">
      <img src="/assets/logo-dark.svg" alt="MIMOSA Real Estate" class="h-14 w-auto nav-logo-dark block dark:hidden" />
      <img src="/assets/logo-light.svg" alt="MIMOSA Real Estate" class="h-14 w-auto nav-logo-light hidden dark:block" />
    </a>

    <!-- Desktop nav links -->
    <div class="hidden lg:flex items-center gap-4">
      {navItems.map((item) => (
        <a href={item.href} class="text-sm uppercase tracking-[0.2em] nav-link transition-colors font-body">
          <span data-t={item.key}>{t(item.key)}</span>
        </a>
      ))}
    </div>

    <!-- Desktop actions -->
    <div class="hidden lg:flex items-center gap-3">
      <button id="lang-toggle" class="rounded-full nav-text hover:bg-white/10 h-11 w-11 border-2 border-transparent hover:border-white/20 flex items-center justify-center text-xs font-bold font-body uppercase" aria-label="Toggle language">
        ES
      </button>
      <button id="theme-toggle" class="rounded-full nav-text hover:bg-white/10 h-11 w-11 border-2 border-transparent hover:border-white/20 flex items-center justify-center" aria-label="Toggle theme">
        <svg class="dark:hidden w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/></svg>
        <svg class="hidden dark:block w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg>
      </button>
      <a href="/contact" class="inline-flex items-center gap-2 bg-primary text-primary-foreground px-5 py-2.5 rounded-sm text-xs tracking-[0.15em] font-bold font-body hover:bg-primary/90 transition-colors">
        <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"/></svg>
        <span data-t="nav.contact">{t("nav.contact").toUpperCase()}</span>
      </a>
    </div>

    <!-- Mobile hamburger -->
    <button id="mobile-menu-toggle" class="lg:hidden nav-text p-2" aria-label="Open menu">
      <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
    </button>
  </div>
</nav>

<!-- Mobile slide-in menu (right side, 50% width) -->
<div id="mobile-menu-overlay" class="fixed inset-0 z-[59] bg-black/40 hidden" aria-hidden="true"></div>
<div id="mobile-menu" class="fixed top-0 right-0 bottom-0 z-[60] w-3/5 max-w-xs bg-background shadow-2xl translate-x-full transition-transform duration-300 ease-in-out flex flex-col">
  <!-- Header -->
  <div class="flex items-center justify-between px-5 h-20 border-b border-border">
    <img src="/assets/logo-dark.svg" alt="MIMOSA Real Estate" class="h-10 w-auto dark:hidden" />
    <img src="/assets/logo-light.svg" alt="MIMOSA Real Estate" class="h-10 w-auto hidden dark:block" />
    <button id="mobile-menu-close" class="text-foreground p-2 -mr-2" aria-label="Close menu">
      <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
    </button>
  </div>

  <!-- Nav links -->
  <nav class="flex-1 flex flex-col gap-1 px-5 py-6 overflow-y-auto">
    {navItems.map((item) => (
      <a href={item.href} class="text-sm uppercase tracking-[0.2em] font-body text-foreground/80 hover:text-primary transition-colors py-3 border-b border-border/50">
        <span data-t={item.key}>{t(item.key)}</span>
      </a>
    ))}
  </nav>

  <!-- Bottom section: toggles + social -->
  <div class="px-5 py-6 border-t border-border flex flex-col gap-5">
    <div class="flex items-center gap-3">
      <button id="lang-toggle-mobile" class="rounded-full text-foreground hover:bg-accent/20 h-10 w-10 border border-border flex items-center justify-center text-xs font-bold font-body uppercase" aria-label="Toggle language">
        ES
      </button>
      <button id="theme-toggle-mobile" class="rounded-full text-foreground hover:bg-accent/20 h-10 w-10 border border-border flex items-center justify-center" aria-label="Toggle theme">
        <svg class="dark:hidden w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/></svg>
        <svg class="hidden dark:block w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg>
      </button>
    </div>
    <SocialLinks class="text-foreground" iconClass="w-3.5 h-3.5" />
  </div>
</div>

<script is:inline>
  function __initNav() {
    var nav = document.getElementById('main-nav');
    var isTransparent = nav.getAttribute('data-transparent') === 'true';

    function updateNav() {
      if (!nav || !isTransparent) return;
      if (window.scrollY > 50) {
        nav.classList.add('glass-nav');
        nav.classList.remove('nav-transparent');
      } else {
        nav.classList.remove('glass-nav');
        nav.classList.add('nav-transparent');
      }
    }
    window.removeEventListener('scroll', updateNav);
    window.addEventListener('scroll', updateNav);
    updateNav();

    // Theme
    function toggleTheme() {
      var isDark = document.documentElement.classList.toggle('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    }
    var themeBtn = document.getElementById('theme-toggle');
    var themeBtnM = document.getElementById('theme-toggle-mobile');
    if (themeBtn) themeBtn.onclick = toggleTheme;
    if (themeBtnM) themeBtnM.onclick = toggleTheme;

    // Language
    function toggleLanguage() {
      var currentLang = document.documentElement.lang;
      var newLang = currentLang === 'es' ? 'en' : 'es';
      localStorage.setItem('lang', newLang);
      document.documentElement.lang = newLang;

      var enData = window.__enTranslations;
      var esData = window.__esTranslations;
      if (!enData || !esData) return;

      var translations = newLang === 'en' ? enData : esData;
      document.querySelectorAll('[data-t]').forEach(function(el) {
        var key = el.getAttribute('data-t');
        if (key && translations[key]) el.textContent = translations[key];
      });
      document.querySelectorAll('[data-t-placeholder]').forEach(function(el) {
        var key = el.getAttribute('data-t-placeholder');
        if (key && translations[key]) el.setAttribute('placeholder', translations[key]);
      });

      var label = newLang === 'es' ? 'ES' : 'EN';
      document.querySelectorAll('#lang-toggle, #lang-toggle-mobile').forEach(function(btn) {
        btn.textContent = label;
      });

      document.dispatchEvent(new CustomEvent('langChanged', { detail: { lang: newLang } }));
    }
    var langBtn = document.getElementById('lang-toggle');
    var langBtnM = document.getElementById('lang-toggle-mobile');
    if (langBtn) langBtn.onclick = toggleLanguage;
    if (langBtnM) langBtnM.onclick = toggleLanguage;

    // Mobile menu slide-in/out
    var mobileMenu = document.getElementById('mobile-menu');
    var overlay = document.getElementById('mobile-menu-overlay');
    var menuOpen = document.getElementById('mobile-menu-toggle');
    var menuClose = document.getElementById('mobile-menu-close');

    function openMenu() {
      overlay.classList.remove('hidden');
      mobileMenu.classList.remove('translate-x-full');
      mobileMenu.classList.add('translate-x-0');
      document.body.style.overflow = 'hidden';
    }
    function closeMenu() {
      mobileMenu.classList.add('translate-x-full');
      mobileMenu.classList.remove('translate-x-0');
      overlay.classList.add('hidden');
      document.body.style.overflow = '';
    }

    if (menuOpen) menuOpen.onclick = openMenu;
    if (menuClose) menuClose.onclick = closeMenu;
    if (overlay) overlay.onclick = closeMenu;
    if (mobileMenu) mobileMenu.querySelectorAll('a[href]').forEach(function(link) {
      link.addEventListener('click', closeMenu);
    });
  }

  __initNav();
</script>
