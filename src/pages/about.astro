---
import PageLayout from '../layouts/PageLayout.astro';
import { t } from '../i18n/utils';
import { images } from '../data/images';
---

<PageLayout title="Nosotros | MIMOSA Developments">
  <section class="pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <p class="text-primary text-sm tracking-[0.3em] uppercase mb-2 font-body" data-t="about.history_subtitle">{t("about.history_subtitle")}</p>
        <h1 class="text-4xl md:text-5xl font-headline font-bold text-foreground" data-t="about.history_title">{t("about.history_title")}</h1>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center mb-24">
        <div class="relative aspect-[4/3] rounded-lg overflow-hidden">
          <img src={images.about.interior} alt="MIMOSA Developments office" class="w-full h-full object-cover" loading="lazy" />
        </div>
        <div>
          <p class="text-muted-foreground leading-relaxed mb-6 font-body" data-t="about.history_p1">{t("about.history_p1")}</p>
          <p class="text-muted-foreground leading-relaxed mb-8 font-body" data-t="about.history_p2">{t("about.history_p2")}</p>
          <blockquote class="text-xl text-muted-foreground italic leading-relaxed font-body border-l-2 border-primary pl-6">
            "<span data-t="about.quote">{t("about.quote")}</span>"
          </blockquote>
        </div>
      </div>

      <div class="text-center mb-12">
        <p class="text-primary text-sm tracking-[0.3em] uppercase mb-2 font-body" data-t="about.pillars_title">{t("about.pillars_title")}</p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center p-6 bg-card rounded-lg border border-border">
          <div class="w-14 h-14 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
          </div>
          <h4 class="font-headline font-semibold text-foreground mb-2" data-t="about.pillar1.title">{t("about.pillar1.title")}</h4>
          <p class="text-sm text-muted-foreground font-body" data-t="about.pillar1.desc">{t("about.pillar1.desc")}</p>
        </div>
        <div class="text-center p-6 bg-card rounded-lg border border-border">
          <div class="w-14 h-14 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/></svg>
          </div>
          <h4 class="font-headline font-semibold text-foreground mb-2" data-t="about.pillar2.title">{t("about.pillar2.title")}</h4>
          <p class="text-sm text-muted-foreground font-body" data-t="about.pillar2.desc">{t("about.pillar2.desc")}</p>
        </div>
        <div class="text-center p-6 bg-card rounded-lg border border-border">
          <div class="w-14 h-14 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 3h12l4 6-10 13L2 9Z"/><path d="M11 3 8 9l4 13 4-13-3-6"/><path d="M2 9h20"/></svg>
          </div>
          <h4 class="font-headline font-semibold text-foreground mb-2" data-t="about.pillar3.title">{t("about.pillar3.title")}</h4>
          <p class="text-sm text-muted-foreground font-body" data-t="about.pillar3.desc">{t("about.pillar3.desc")}</p>
        </div>
        <div class="text-center p-6 bg-card rounded-lg border border-border">
          <div class="w-14 h-14 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
          </div>
          <h4 class="font-headline font-semibold text-foreground mb-2" data-t="about.pillar4.title">{t("about.pillar4.title")}</h4>
          <p class="text-sm text-muted-foreground font-body" data-t="about.pillar4.desc">{t("about.pillar4.desc")}</p>
        </div>
      </div>
    </div>
  </section>
</PageLayout>
