---
import PageLayout from '../../layouts/PageLayout.astro';
import DevelopmentCard from '../../components/DevelopmentCard.astro';
import Icon from '../../components/icons/Icon.astro';
import { t } from '../../i18n/utils';
import { getCollection } from 'astro:content';

let esDevelopments: any[] = [];
try {
  esDevelopments = await getCollection('developments', ({ data }) => data.lang === 'es');
} catch (e) {
  console.error('[v0] Content collection error:', e);
}
---

<PageLayout
  title="Desarrollos Exclusivos | MIMOSA Real Estate"
  description="Explora nuestro portafolio exclusivo de desarrollos inmobiliarios de lujo en Bacalar, Tulum, Merida, Punta Mita, Cancun y Los Cabos."
  keywords="desarrollos, portafolio, bacalar, tulum, merida, cancun, punta mita, los cabos, lujo, inversion inmobiliaria"
>
  <section class="pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16 reveal" data-reveal="fade">
        <p class="text-primary text-sm tracking-[0.3em] uppercase mb-2 font-body" data-t="featured.subtitle">{t("featured.subtitle")}</p>
        <h1 class="text-4xl md:text-5xl font-headline font-bold text-foreground" data-t="nav.developments">{t("nav.developments")}</h1>
      </div>
      <div class="flex flex-col gap-6 reveal-stagger">
        {esDevelopments.map((dev, index) => {
          const isEven = index % 2 === 0;
          return (
            <a 
              href={`/developments/${dev.data.slug}`}
              class={`group relative overflow-hidden rounded-xl bg-card border border-border hover:border-primary/50 transition-all duration-700 hover:shadow-2xl reveal ${isEven ? '' : 'lg:flex-row-reverse'}`}
            >
              <div class={`grid lg:grid-cols-5 gap-0 items-center ${isEven ? '' : 'lg:flex-row-reverse'}`}>
                <!-- Image Section -->
                <div class="relative aspect-[16/9] lg:aspect-[3/2] lg:col-span-2 overflow-hidden">
                  <div class="absolute inset-0 bg-gradient-to-r from-primary/20 to-transparent z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
                  <img 
                    src={dev.data.image} 
                    alt={dev.data.title}
                    class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition-colors duration-700"></div>
                </div>
                
                <!-- Content Section -->
                <div class={`lg:col-span-3 p-6 lg:p-8 flex flex-col justify-center ${isEven ? 'lg:order-last' : 'lg:order-first'}`}>
                  <div class="flex items-center gap-2 mb-2">
                    <Icon name="map-pin" class="w-4 h-4 text-primary" />
                    <p class="text-xs text-muted-foreground font-body tracking-wider uppercase">{dev.data.location}</p>
                  </div>
                  
                  <h3 class="text-2xl lg:text-3xl font-headline font-bold text-foreground mb-3 group-hover:text-primary transition-colors duration-500">
                    {dev.data.title}
                  </h3>
                  
                  <p class="text-sm text-muted-foreground font-body leading-relaxed mb-4 text-pretty line-clamp-2">
                    {dev.data.shortDescription}
                  </p>
                  
                  <div class="flex items-center gap-2 text-primary font-body font-bold text-xs tracking-wider uppercase group-hover:gap-3 transition-all duration-300">
                    <span>{t("featured.cta")}</span>
                    <Icon name="arrow-right" class="w-4 h-4 transform group-hover:translate-x-2 transition-transform duration-300" />
                  </div>
                </div>
              </div>
              
              <!-- Decorative corner accent -->
              <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
            </a>
          );
        })}
      </div>
    </div>
  </section>
</PageLayout>
