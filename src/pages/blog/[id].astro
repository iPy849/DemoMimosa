---
import PageLayout from '../../layouts/PageLayout.astro';
import Icon from '../../components/icons/Icon.astro';
import { t } from '../../i18n/utils';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => data.lang === 'es');
  return posts.map((post) => ({
    params: { id: post.data.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<PageLayout
  title={`${post.data.title} | MIMOSA Real Estate`}
  description={post.data.excerpt}
  keywords={`blog, ${post.data.title}, caribe mexicano, lujo, bienes raices`}
>
  <section class="pt-32 pb-24 px-6">
    <div class="max-w-4xl mx-auto">
      <a href="/blog" class="inline-flex items-center gap-2 text-primary text-sm tracking-wider uppercase font-bold font-body hover:underline mb-8">
        <Icon name="arrow-left" class="w-4 h-4" />
        <span data-t="blog.back">{t("blog.back")}</span>
      </a>
      <div class="flex items-center gap-4 text-sm text-muted-foreground mb-4 font-body">
        <span class="flex items-center gap-1">
          <Icon name="calendar" class="w-4 h-4" />
          {post.data.date}
        </span>
        <span class="flex items-center gap-1">
          <Icon name="user" class="w-4 h-4" />
          {post.data.author}
        </span>
      </div>
      <h1 class="text-3xl md:text-4xl font-headline font-bold mb-8 text-foreground">{post.data.title}</h1>
      <div class="relative aspect-[2/1] rounded-lg overflow-hidden mb-12">
        <img src={post.data.image} alt={post.data.title} class="w-full h-full object-cover" />
      </div>
      <article class="prose prose-lg max-w-none font-body text-foreground [&_h3]:font-headline [&_h3]:text-foreground [&_h3]:text-2xl [&_h3]:font-bold [&_h3]:mt-8 [&_h3]:mb-4 [&_p]:text-muted-foreground [&_p]:leading-relaxed [&_p]:mb-6">
        <Content />
      </article>
      <div class="mt-12 pt-8 border-t border-border flex flex-col sm:flex-row gap-4 items-center justify-between">
        <div class="flex items-center gap-3">
          <span class="text-sm text-muted-foreground font-body" data-t="blog.share">{t("blog.share")}</span>
        </div>
        <a href="/contact" class="inline-block bg-primary text-primary-foreground px-6 py-3 text-xs tracking-[0.2em] font-bold font-body hover:bg-primary/90 transition-colors" data-t="blog.contact_agent">{t("blog.contact_agent")}</a>
      </div>
    </div>
  </section>
</PageLayout>
