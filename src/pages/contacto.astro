---
import PageLayout from '../layouts/PageLayout.astro';
import { translations } from '../data/translations';

const lang = 'es';
const t = (key: keyof typeof translations['es']) => translations[lang][key];
---

<PageLayout lang={lang} title="Contacto | MIMOSA Developments">
  <section class="pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <p class="text-primary text-sm tracking-[0.3em] uppercase mb-2 font-body">{t("contact.subtitle")}</p>
        <h1 class="text-4xl md:text-5xl font-headline font-bold text-foreground">{t("contact.title")}</h1>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Info Column -->
        <div>
          <h2 class="text-2xl font-headline font-semibold mb-4 text-foreground">{t("contact.page.how")}</h2>
          <p class="text-muted-foreground font-body leading-relaxed mb-8">
            {t("contact.page.desc")}
          </p>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="flex items-start gap-4 p-4 rounded-lg border border-border bg-card">
              <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
              </div>
              <div>
                <p class="text-sm font-semibold text-foreground font-body">{t("contact.page.email")}</p>
                <p class="text-sm text-muted-foreground font-body">luxury@mimosaestates.com</p>
              </div>
            </div>
            <div class="flex items-start gap-4 p-4 rounded-lg border border-border bg-card">
              <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              </div>
              <div>
                <p class="text-sm font-semibold text-foreground font-body">{t("contact.page.phone")}</p>
                <p class="text-sm text-muted-foreground font-body">+52 (998) 123 4567</p>
              </div>
            </div>
            <div class="flex items-start gap-4 p-4 rounded-lg border border-border bg-card">
              <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
              </div>
              <div>
                <p class="text-sm font-semibold text-foreground font-body">{t("contact.page.office")}</p>
                <p class="text-sm text-muted-foreground font-body">Zona Hotelera, Canc√∫n, MX</p>
              </div>
            </div>
            <div class="flex items-start gap-4 p-4 rounded-lg border border-border bg-card">
              <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
              </div>
              <div>
                <p class="text-sm font-semibold text-foreground font-body">{t("contact.page.hours")}</p>
                <p class="text-sm text-muted-foreground font-body">{t("contact.page.hours.value")}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Column -->
        <div class="bg-card rounded-lg border border-border p-8">
          <form class="flex flex-col gap-6">
            <div class="flex flex-col gap-2">
              <label class="text-sm font-body text-foreground">{t("contact.form.name")}</label>
              <input type="text" class="bg-background border border-input rounded-md px-4 py-3 text-foreground font-body focus:outline-none focus:ring-2 focus:ring-ring" />
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="flex flex-col gap-2">
                <label class="text-sm font-body text-foreground">{t("contact.page.email")}</label>
                <input type="email" class="bg-background border border-input rounded-md px-4 py-3 text-foreground font-body focus:outline-none focus:ring-2 focus:ring-ring" />
              </div>
              <div class="flex flex-col gap-2">
                <label class="text-sm font-body text-foreground">WhatsApp</label>
                <input type="tel" class="bg-background border border-input rounded-md px-4 py-3 text-foreground font-body focus:outline-none focus:ring-2 focus:ring-ring" />
              </div>
            </div>
            <div class="flex flex-col gap-2">
              <label class="text-sm font-body text-foreground">{t("contact.form.message")}</label>
              <textarea rows="5" class="bg-background border border-input rounded-md px-4 py-3 text-foreground font-body focus:outline-none focus:ring-2 focus:ring-ring resize-none"></textarea>
            </div>
            <button type="submit" class="w-full bg-primary text-primary-foreground px-8 py-4 text-xs tracking-[0.2em] font-bold font-body hover:bg-primary/90 transition-colors">
              {t("contact.page.submit")}
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</PageLayout>
