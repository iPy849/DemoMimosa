---
import PageLayout from '../../../layouts/PageLayout.astro';
import DevelopmentCard from '../../../components/DevelopmentCard.astro';
import { translations } from '../../../data/translations';
import { allDevelopments } from '../../../data/developments';

const lang = 'en';
const t = (key: keyof typeof translations['es']) => translations[lang][key];
---

<PageLayout lang={lang} title="Developments | MIMOSA Developments">
  <section class="pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <p class="text-primary text-sm tracking-[0.3em] uppercase mb-2 font-body">{t("featured.subtitle")}</p>
        <h1 class="text-4xl md:text-5xl font-headline font-bold text-foreground">{t("nav.developments")}</h1>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {allDevelopments.map((dev) => (
          <DevelopmentCard id={dev.id} title={dev.title} location={dev.location} image={dev.image} description={dev.descriptionEn} lang={lang} />
        ))}
      </div>
    </div>
  </section>
</PageLayout>
