---
import PageLayout from '../../layouts/PageLayout.astro';
import { useTranslations, localePath, type Language } from '../../i18n/utils';

const lang: Language = 'en';
const t = useTranslations(lang);

const pillars = [
  { icon: `<svg class="w-8 h-8 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/></svg>`, title: t("about.pillar1.title"), desc: t("about.pillar1.desc") },
  { icon: `<svg class="w-8 h-8 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>`, title: t("about.pillar2.title"), desc: t("about.pillar2.desc") },
  { icon: `<svg class="w-8 h-8 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>`, title: t("about.pillar3.title"), desc: t("about.pillar3.desc") },
  { icon: `<svg class="w-8 h-8 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>`, title: t("about.pillar4.title"), desc: t("about.pillar4.desc") },
];
---

<PageLayout lang={lang} title="About Us | MIMOSA Developments">
  <section class="pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div>
        <p class="text-primary text-sm tracking-[0.3em] uppercase mb-2 font-body">{t("about.history_subtitle")}</p>
        <h1 class="text-4xl md:text-5xl font-headline font-bold mb-8 text-foreground">{t("about.history_title")}</h1>
        <p class="text-muted-foreground leading-relaxed mb-6 font-body text-lg">{t("about.history_p1")}</p>
        <p class="text-muted-foreground leading-relaxed mb-8 font-body text-lg">{t("about.history_p2")}</p>
        <a href={localePath(lang, '/contacto')} class="inline-flex items-center gap-2 bg-primary text-primary-foreground px-8 py-3 text-xs tracking-[0.2em] font-bold font-body hover:bg-primary/90 transition-colors">
          <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"/></svg>
          {t("hero.cta.secondary")}
        </a>
      </div>
      <div class="relative aspect-[4/3] rounded-lg overflow-hidden">
        <img src="https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?q=80&w=800&h=600&auto=format&fit=crop" alt="Luxury property" class="w-full h-full object-cover" />
      </div>
    </div>
  </section>

  <section class="py-24 bg-card">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-3xl md:text-4xl font-headline font-bold text-center mb-16 text-foreground">{t("about.pillars_title")}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {pillars.map((item) => (
          <div class="text-center p-8 rounded-lg border border-border bg-background hover:shadow-md transition-shadow">
            <div class="flex justify-center mb-4" set:html={item.icon} />
            <h3 class="text-xl font-headline font-semibold mb-2 text-foreground">{item.title}</h3>
            <p class="text-muted-foreground font-body text-sm leading-relaxed">{item.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</PageLayout>
