---
import PageLayout from '../../layouts/PageLayout.astro';
import { useTranslations, localePath, type Language } from '../../i18n/utils';

const lang: Language = 'en';
const t = useTranslations(lang);

const sections = [
  {
    title: t("sitemap.sec1"),
    links: [
      { name: t("nav.home"), href: localePath(lang, '/') },
      { name: t("nav.about"), href: localePath(lang, '/nosotros') },
      { name: t("nav.developments"), href: localePath(lang, '/desarrollos') },
      { name: t("nav.blog"), href: localePath(lang, '/blog') },
      { name: t("nav.contact"), href: localePath(lang, '/contacto') },
    ],
  },
  {
    title: t("sitemap.sec2"),
    links: [
      { name: "Cuatro Bacalar", href: localePath(lang, '/desarrollos/cuatro-bacalar') },
      { name: "Tulum Eco Resort", href: localePath(lang, '/desarrollos/tulum-eco-resort') },
      { name: "Merida Heritage", href: localePath(lang, '/desarrollos/merida-luxury') },
    ],
  },
  {
    title: t("sitemap.sec3"),
    links: [
      { name: t("footer.privacy"), href: "#" },
      { name: t("footer.terms"), href: "#" },
      { name: "Cookies", href: "#" },
    ],
  },
];
---

<PageLayout lang={lang} title="Sitemap | MIMOSA Developments">
  <section class="pt-32 pb-24 px-6">
    <div class="max-w-4xl mx-auto">
      <div class="flex items-center gap-4 mb-8">
        <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
        </div>
        <div>
          <h1 class="text-3xl font-headline font-bold text-foreground">{t("sitemap.title")}</h1>
          <p class="text-muted-foreground font-body">{t("sitemap.desc")}</p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {sections.map((section) => (
          <div class="bg-card rounded-lg border border-border p-6">
            <h2 class="text-lg font-headline font-semibold text-foreground mb-4 pb-3 border-b border-border">{section.title}</h2>
            <ul class="flex flex-col gap-3">
              {section.links.map((link) => (
                <li>
                  <a href={link.href} class="flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors font-body text-sm group">
                    <svg class="w-4 h-4 text-primary/50 group-hover:text-primary transition-colors" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>
</PageLayout>
