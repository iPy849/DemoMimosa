---
import PageLayout from '../../../layouts/PageLayout.astro';
import { translations } from '../../../data/translations';
import { blogPosts } from '../../../data/developments';

export function getStaticPaths() {
  return blogPosts.map((post) => ({ params: { id: post.id } }));
}

const { id } = Astro.params;
const lang = 'en';
const t = (key: keyof typeof translations['es']) => translations[lang][key];
const post = blogPosts.find((p) => p.id === id) || blogPosts[0];
---

<PageLayout lang={lang} title={`${post.titleEn} | MIMOSA Developments`}>
  <section class="pt-32 pb-24 px-6">
    <div class="max-w-4xl mx-auto">
      <a href="/en/blog" class="inline-flex items-center gap-2 text-primary text-sm tracking-wider uppercase font-bold font-body hover:underline mb-8">
        <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
        {t("common.back")}
      </a>

      <div class="flex items-center gap-4 text-sm text-muted-foreground mb-4 font-body">
        <span>{post.date}</span>
        <span>{post.author}</span>
      </div>
      <h1 class="text-3xl md:text-4xl font-headline font-bold mb-8 text-foreground">{post.titleEn}</h1>
      <div class="relative aspect-[2/1] rounded-lg overflow-hidden mb-12">
        <img src={post.image} alt={post.titleEn} class="w-full h-full object-cover" />
      </div>
      <article class="prose prose-lg max-w-none font-body text-foreground [&_h3]:font-headline [&_h3]:text-foreground [&_h3]:text-2xl [&_h3]:font-bold [&_h3]:mt-8 [&_h3]:mb-4 [&_p]:text-muted-foreground [&_p]:leading-relaxed [&_p]:mb-6" set:html={post.contentEn} />

      <div class="mt-12 pt-8 border-t border-border flex flex-col sm:flex-row gap-4 items-center justify-between">
        <div class="flex items-center gap-3">
          <span class="text-sm text-muted-foreground font-body">Share:</span>
          <button class="w-10 h-10 rounded-full border border-border flex items-center justify-center text-muted-foreground hover:text-primary hover:border-primary transition-colors" aria-label="Share">
            <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="18" cy="5" r="3"/><circle cx="6" cy="12" r="3"/><circle cx="18" cy="19" r="3"/><line x1="8.59" x2="15.42" y1="13.51" y2="17.49"/><line x1="15.41" x2="8.59" y1="6.51" y2="10.49"/></svg>
          </button>
        </div>
        <a href="/en/contacto" class="inline-block bg-primary text-primary-foreground px-6 py-3 text-xs tracking-[0.2em] font-bold font-body hover:bg-primary/90 transition-colors">CONTACT AGENT</a>
      </div>
    </div>
  </section>
</PageLayout>
