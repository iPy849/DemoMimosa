---
import PageLayout from '../../../layouts/PageLayout.astro';
import { useTranslations, localePath, type Language } from '../../../i18n/utils';
import { getCollection, render } from 'astro:content';

const lang: Language = 'en';
const t = useTranslations(lang);

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => data.lang === 'en');
  return posts.map((post) => ({ params: { id: post.id }, props: { post } }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<PageLayout lang={lang} title={`${post.data.title} | MIMOSA Developments`}>
  <section class="pt-32 pb-24 px-6">
    <div class="max-w-4xl mx-auto">
      <a href={localePath(lang, '/blog')} class="inline-flex items-center gap-2 text-primary text-sm tracking-wider uppercase font-bold font-body hover:underline mb-8">
        <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
        {t("common.back")}
      </a>

      <div class="flex items-center gap-4 text-sm text-muted-foreground mb-4 font-body">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>
          {post.data.date}
        </span>
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
          {post.data.author}
        </span>
      </div>

      <h1 class="text-3xl md:text-4xl font-headline font-bold mb-8 text-foreground">{post.data.title}</h1>

      <div class="relative aspect-[2/1] rounded-lg overflow-hidden mb-12">
        <img src={post.data.image} alt={post.data.title} class="w-full h-full object-cover" />
      </div>

      <article class="prose prose-lg max-w-none font-body text-foreground [&_h3]:font-headline [&_h3]:text-foreground [&_h3]:text-2xl [&_h3]:font-bold [&_h3]:mt-8 [&_h3]:mb-4 [&_p]:text-muted-foreground [&_p]:leading-relaxed [&_p]:mb-6">
        <Content />
      </article>

      <div class="mt-12 pt-8 border-t border-border flex flex-col sm:flex-row gap-4 items-center justify-between">
        <div class="flex items-center gap-3">
          <span class="text-sm text-muted-foreground font-body">{t("common.share")}</span>
          <button class="w-10 h-10 rounded-full border border-border flex items-center justify-center text-muted-foreground hover:text-primary hover:border-primary transition-colors" aria-label="Share">
            <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="18" cy="5" r="3"/><circle cx="6" cy="12" r="3"/><circle cx="18" cy="19" r="3"/><line x1="8.59" x2="15.42" y1="13.51" y2="17.49"/><line x1="15.41" x2="8.59" y1="6.51" y2="10.49"/></svg>
          </button>
        </div>
        <a href={localePath(lang, '/contacto')} class="inline-block bg-primary text-primary-foreground px-6 py-3 text-xs tracking-[0.2em] font-bold font-body hover:bg-primary/90 transition-colors">{t("common.contact_agent")}</a>
      </div>
    </div>
  </section>
</PageLayout>
