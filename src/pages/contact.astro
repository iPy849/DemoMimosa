---
import PageLayout from '../layouts/PageLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import { t } from '../i18n/utils';
---

<PageLayout title="Contacto | MIMOSA Developments">
  <section class="pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16 reveal" data-reveal="fade">
        <p class="text-primary text-sm tracking-[0.3em] uppercase mb-2 font-body" data-t="contact.subtitle">{t("contact.subtitle")}</p>
        <h1 class="text-4xl md:text-5xl font-headline font-bold text-foreground" data-t="contact.page.how">{t("contact.page.how")}</h1>
        <p class="text-muted-foreground font-body mt-4 max-w-xl mx-auto" data-t="contact.page.desc">{t("contact.page.desc")}</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <div class="lg:col-span-2 reveal" data-reveal="left">
          <ContactForm variant="card" />
        </div>
        <div class="flex flex-col gap-6 reveal-stagger">
          <div class="bg-card rounded-lg border border-border p-6 reveal">
            <h4 class="font-headline font-semibold text-foreground mb-3" data-t="contact.page.email">{t("contact.page.email")}</h4>
            <p class="text-muted-foreground font-body text-sm">info@mimosadevelopments.com</p>
          </div>
          <div class="bg-card rounded-lg border border-border p-6 reveal">
            <h4 class="font-headline font-semibold text-foreground mb-3" data-t="contact.page.phone">{t("contact.page.phone")}</h4>
            <p class="text-muted-foreground font-body text-sm">+52 (998) 123 4567</p>
          </div>
          <div class="bg-card rounded-lg border border-border p-6 reveal">
            <h4 class="font-headline font-semibold text-foreground mb-3" data-t="contact.page.office">{t("contact.page.office")}</h4>
            <p class="text-muted-foreground font-body text-sm">Av. Luxury Developments 404, Zona Hotelera, Cancun, MX</p>
          </div>
          <div class="bg-card rounded-lg border border-border p-6 reveal">
            <h4 class="font-headline font-semibold text-foreground mb-3" data-t="contact.page.hours">{t("contact.page.hours")}</h4>
            <p class="text-muted-foreground font-body text-sm" data-t="contact.page.hours.value">{t("contact.page.hours.value")}</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>
