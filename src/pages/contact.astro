---
import PageLayout from '../layouts/PageLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import Icon from '../components/icons/Icon.astro';
import { contactInfo } from '../data/contact';
---

<PageLayout
  title="Contacto | MIMOSA Developments"
  description="Contacta con MIMOSA Developments para conocer nuestros desarrollos exclusivos en el Caribe Mexicano."
  keywords="contacto, mimosa, developments, caribe mexicano"
  contactForm={false}
>
  <section class="pt-32 pb-12 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16 reveal" data-reveal="fade">
        <p class="text-primary text-sm tracking-[0.3em] uppercase mb-2 font-body">Hablemos</p>
        <h1 class="text-4xl md:text-5xl font-headline font-bold text-foreground text-balance">Inicia Tu Proxima Inversion</h1>
      </div>

      <!-- Main Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
        <!-- Left: Contact Form -->
        <div class="lg:col-span-2 reveal" data-reveal="left">
          <ContactForm variant="card" />
        </div>

        <!-- Right: Contact Information + Map -->
        <div class="space-y-8 reveal" data-reveal="right">
          <!-- Contact Info Card -->
          <div class="bg-card rounded-2xl border border-border p-8 shadow-lg">
            <h3 class="font-headline font-bold text-foreground text-xl mb-6">Informacion de Contacto</h3>
            
            <div class="space-y-5">
              <!-- Email -->
              <div class="flex items-start gap-4 group">
                <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-primary/20 transition-colors">
                  <Icon name="mail" class="w-5 h-5 text-primary" />
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="font-headline font-semibold text-foreground text-sm mb-1">Email</h4>
                  <a href={`mailto:${contactInfo.email}`} class="text-muted-foreground hover:text-primary font-body text-sm transition-colors break-all">
                    {contactInfo.email}
                  </a>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start gap-4 group">
                <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-primary/20 transition-colors">
                  <Icon name="phone" class="w-5 h-5 text-primary" />
                </div>
                <div class="flex-1">
                  <h4 class="font-headline font-semibold text-foreground text-sm mb-1">Telefono</h4>
                  <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="text-muted-foreground hover:text-primary font-body text-sm transition-colors">
                    {contactInfo.phone}
                  </a>
                </div>
              </div>

              <!-- Office -->
              <div class="flex items-start gap-4 group">
                <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-primary/20 transition-colors">
                  <Icon name="map-pin" class="w-5 h-5 text-primary" />
                </div>
                <div class="flex-1">
                  <h4 class="font-headline font-semibold text-foreground text-sm mb-1">Oficina</h4>
                  <p class="text-muted-foreground font-body text-sm leading-relaxed">
                    {contactInfo.address}
                  </p>
                </div>
              </div>

              <!-- Hours -->
              <div class="flex items-start gap-4 group">
                <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-primary/20 transition-colors">
                  <Icon name="clock" class="w-5 h-5 text-primary" />
                </div>
                <div class="flex-1">
                  <h4 class="font-headline font-semibold text-foreground text-sm mb-1">Horario</h4>
                  <div class="text-muted-foreground font-body text-sm space-y-1">
                    {contactInfo.hours.map(hour => <p>{hour}</p>)}
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Map Card -->
          <div class="relative h-[300px] rounded-2xl overflow-hidden border border-border shadow-xl">
            <iframe
              src={contactInfo.mapUrl}
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="grayscale hover:grayscale-0 transition-all duration-700"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>
