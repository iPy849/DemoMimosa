---
import PageLayout from '../layouts/PageLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import { t } from '../i18n/utils';
---

<PageLayout
  title="Contacto | MIMOSA Real Estate"
  description="Contacta a un asesor especializado de MIMOSA Real Estate para iniciar tu proxima inversion inmobiliaria en el Caribe Mexicano."
  keywords="contacto, asesor inmobiliario, inversion, caribe mexicano, formulario, mimosa real estate"
>
  <section class="pt-32 pb-24 px-6">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16 reveal" data-reveal="fade">
        <p class="text-primary text-sm tracking-[0.3em] uppercase mb-3 font-body" data-t="contact.subtitle">{t("contact.subtitle")}</p>
        <h1 class="text-4xl md:text-6xl font-headline font-bold text-foreground mb-4" data-t="contact.page.how">{t("contact.page.how")}</h1>
        <p class="text-muted-foreground font-body text-lg mt-4 max-w-2xl mx-auto leading-relaxed" data-t="contact.page.desc">{t("contact.page.desc")}</p>
      </div>

      <!-- Main Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
        <!-- Left: Contact Form -->
        <div class="lg:col-span-2 reveal" data-reveal="left">
          <div class="relative">
            <!-- Decorative gradient background -->
            <div class="absolute -inset-4 bg-gradient-to-br from-primary/5 via-transparent to-accent/5 rounded-3xl opacity-50 blur-2xl"></div>
            
            <div class="relative bg-card rounded-2xl border border-border p-8 md:p-12 shadow-xl">
              <ContactForm variant="card" />
            </div>
          </div>
        </div>

        <!-- Right: Contact Information -->
        <div class="flex flex-col gap-6 reveal-stagger">
          <!-- Email Card -->
          <div class="group relative overflow-hidden bg-card rounded-2xl border border-border p-6 hover:border-primary/50 transition-all duration-500 hover:shadow-xl hover:-translate-y-1 reveal">
            <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-primary/10 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative z-10">
              <div class="w-12 h-12 bg-gradient-to-br from-primary/20 to-primary/5 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-500">
                <svg class="w-6 h-6 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
              </div>
              <h4 class="font-headline font-bold text-foreground mb-2 text-lg" data-t="contact.page.email">{t("contact.page.email")}</h4>
              <a href="mailto:info@mimosadevelopments.com" class="text-muted-foreground hover:text-primary font-body text-sm transition-colors">
                info@mimosadevelopments.com
              </a>
            </div>
          </div>

          <!-- Phone Card -->
          <div class="group relative overflow-hidden bg-card rounded-2xl border border-border p-6 hover:border-primary/50 transition-all duration-500 hover:shadow-xl hover:-translate-y-1 reveal">
            <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-primary/10 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative z-10">
              <div class="w-12 h-12 bg-gradient-to-br from-primary/20 to-primary/5 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-500">
                <svg class="w-6 h-6 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              </div>
              <h4 class="font-headline font-bold text-foreground mb-2 text-lg" data-t="contact.page.phone">{t("contact.page.phone")}</h4>
              <a href="tel:+529981234567" class="text-muted-foreground hover:text-primary font-body text-sm transition-colors">
                +52 (998) 123 4567
              </a>
            </div>
          </div>

          <!-- Office Card -->
          <div class="group relative overflow-hidden bg-card rounded-2xl border border-border p-6 hover:border-primary/50 transition-all duration-500 hover:shadow-xl hover:-translate-y-1 reveal">
            <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-primary/10 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative z-10">
              <div class="w-12 h-12 bg-gradient-to-br from-primary/20 to-primary/5 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-500">
                <svg class="w-6 h-6 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
              </div>
              <h4 class="font-headline font-bold text-foreground mb-2 text-lg" data-t="contact.page.office">{t("contact.page.office")}</h4>
              <p class="text-muted-foreground font-body text-sm leading-relaxed">
                Av. Luxury Developments 404<br>
                Zona Hotelera, Cancun, MX
              </p>
            </div>
          </div>

          <!-- Hours Card -->
          <div class="group relative overflow-hidden bg-card rounded-2xl border border-border p-6 hover:border-primary/50 transition-all duration-500 hover:shadow-xl hover:-translate-y-1 reveal">
            <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-primary/10 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative z-10">
              <div class="w-12 h-12 bg-gradient-to-br from-primary/20 to-primary/5 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-500">
                <svg class="w-6 h-6 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
              </div>
              <h4 class="font-headline font-bold text-foreground mb-2 text-lg" data-t="contact.page.hours">{t("contact.page.hours")}</h4>
              <p class="text-muted-foreground font-body text-sm" data-t="contact.page.hours.value">{t("contact.page.hours.value")}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Bottom Map Section (Optional Enhancement) -->
      <div class="mt-16 reveal" data-reveal="fade">
        <div class="relative h-[400px] rounded-2xl overflow-hidden border border-border shadow-xl">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d119081.39191229856!2d-86.92844847149996!3d21.161907997724962!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f4c2b05aef653db%3A0xce32b73c625fcd8a!2sCanc%C3%BAn%2C%20Q.R.%2C%20Mexico!5e0!3m2!1sen!2sus!4v1647890123456!5m2!1sen!2sus"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="grayscale hover:grayscale-0 transition-all duration-700"
          ></iframe>
          <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/60 to-transparent p-6">
            <p class="text-white font-headline font-bold text-lg">Encuentranos en Cancun</p>
            <p class="text-white/80 font-body text-sm">Riviera Maya, Mexico</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>
